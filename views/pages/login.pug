extends ../layout
block content-mpro
  .login-content
    h1.text-center Mpro Inicio
    form#loginForm(role='form', action='/login', method='post', style='max-width: 400px; margin:0 auto;')
      .form-group
        input.form-control(type='email', name='username', placeholder='Correo' required)
      .form-group
        input(type='hidden', name='_csrf', value='#{csrfToken}')
        input#inputPassword.form-control(type='password', name='password', placeholder='Contrase√±a' required)
      button#loginButton.btn.btn-lg.btn-primary.btn-block(type='submit') Ingresar
    if showMessage
      h5(style="margin-top:1em;text-align:center;") #{showMessage}
  script(type='text/javascript').
    console.log('#{csrfToken}');