extends ../../layout
block content-mpro
  include ../../partials/header.pug
  .container-fluid
    .row
      .col-md-12
        .row.dashboard-nav-row
          .col-md-3
            a(href="/"+user.role)
              h5 Actividades
          .col-md-3
            a(href="/"+user.role+"/companies")
              h5 Empresas
          .col-md-3
            a(href="/"+user.role+"/users")
              h5 Usuarios
          .col-md-3
            a(href="/"+user.role+"/equipments")
              h5 Equipos
        #tabcontent
          .row
            .col-md-12
              each act, i in activity
                .card
                  .card-header
                    h3 #{act.level}
                  .card-block
                    h4 #{act.type}
                    p #{act.text}
                  .card-footer
                    p #{act.date}
  script(src='../../javascripts/dashboard/main.js')